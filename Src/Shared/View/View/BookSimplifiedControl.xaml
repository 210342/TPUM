<UserControl x:Class="TPUM.Shared.View.BookSimplifiedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TPUM.Shared.View"
             xmlns:vm="clr-namespace:TPUM.Shared.ViewModel;assembly=SharedViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="420">
    
    <Grid>
        <Viewbox>
            <TextBlock Text="{Binding Book.Title, Mode=TwoWay}" FontWeight="Bold" />
        </Viewbox>
    </Grid>
</UserControl>
