<UserControl x:Class="TPUM.Shared.View.AuthorSimplifiedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TPUM.Shared.View"
             xmlns:vm="clr-namespace:TPUM.Shared.ViewModel;assembly=SharedViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Column="0" Margin="4, 2, 4, 2">
            <TextBlock Text="{Binding Author.FirstName}" FontStyle="Italic" />
        </Viewbox>
        <Viewbox Grid.Column="1" Margin="4, 2, 4, 2">
            <TextBlock Text="{Binding Author.LastName}" FontWeight="Bold" FontStyle="Italic" />
        </Viewbox>
    </Grid>
</UserControl>
